<%layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">EDIT BOOKING</h1>
  <div class="col-6 offset-3">
    <form action="/drones/<%=drone._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Name</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="drone[name]"
          value="<%=drone.name%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="drone[location]"
          value="<%=drone.location%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="drone[image]"
          value="<%=drone.image%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Booking Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="drone[price]"
            value="<%=drone.price%>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Booking Date</label>
        <input
          class="form-control"
          type="text"
          id="date"
          name="drone[date]"
          value="<%=drone.date%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="type">Type of Drone-Shot</label>
        <textarea class="form-control" type="text" id="type" name="drone[type]">
<%=drone.type %></textarea
        >
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Drone</button>
      </div>
    </form>

    <a href="/drones/<%=drone._id%>">BACK TO DRONES</a>
  </div>
</div>
