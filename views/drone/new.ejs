<%layout("layouts/boilerplate") %>
<!---->
<div class="row">
  <h1 class="text-center">NEW BOOKING</h1>
  <div class="col-6 offset-3">
    <form action="/drones" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Name</label>
        <input class="form-control" type="text" id="title" name="drone[name]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="drone[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="drone[image]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Booking Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="drone[price]"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Booking Date</label>
        <input class="form-control" type="text" id="date" name="drone[date]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="type">Type of Drone-Shot</label>
        <textarea
          class="form-control"
          type="text"
          id="type"
          name="drone[type]"
        ></textarea>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Drone</button>
      </div>
    </form>

    <a href="/drones">ALL DRONES</a>
  </div>
</div>
